<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.exercises.any? %>
			<h3>Pull ups (<%= @user.exercises.count %>)</h3>
			<ol class="exercises">
				<%= render @exercises %>
			</ol>
			<%= will_paginate @exercises %>
		<% end %>
	</div>
</div>
